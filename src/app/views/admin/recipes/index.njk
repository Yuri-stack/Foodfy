{% extends "layouts/admin.njk" %} 

    {% block container %}

        <section class="intro">

            <div class="intro-text">
                <h1>Gerenciar Receitas</h1>
            </div>

            <div class="intro-btn"> 
                <a href="/admin/recipes/create">Criar Nova Receita</a>
            </div>

        </section>

        <section class="recipes_container">
            
            <div class="card_secondary" id="{{ recipe.id }}"> 

                <img class="card_img"
                    src="https://conteudo.imguol.com.br/c/entretenimento/fa/2015/09/11/paola-carosella-1442002659696_615x300.jpg" alt="">

                <div class="card_info">
                    <span class="card_info_title">Nome da Receita</span>
                    <span class="card_info_subtitle">Nome do Autor</span>
                    <span class="card_info_view">
                        <a href="/admin/recipes/{{ recipe.id }}">
                            Visualizar
                        </a>
                    </span>
                </div>

            </div>

            <div class="card_secondary">

                <img class="card_img" src="{{ recipe.image_url }}" alt="Imagem de {{ recipe.name }}">

                <div class="card_info">
                    <span class="card_info_title">{{ recipe.name }}</span>
                    <span class="card_info_subtitle">{{ recipe.author }}</span>
                    <span class="card_info_view">
                        <a href="/admin/recipes/{{ recipe.id }}">
                            Visualizar
                        </a>
                    </span>
                </div>

            </div>
                
        </section>

    {% endblock container %}