{% extends "layouts/admin.njk" %} 

    {% block head %}
        <title>Foodfy - Receitas</title> 
    {% endblock %}

    {% block container %}

        <section class="intro">

            <div class="intro-text">
                <h1>Gerenciar Receitas</h1>
            </div>

            <div class="intro-btn"> 
                <a href="/admin/recipes/create">Criar Nova Receita</a>
            </div>

        </section>

        <section class="recipes_container">

            {% for recipe in recipes %}

                <div class="card_secondary">

                    <img class="card_img" src="{{ recipe.image }}" alt="Imagem de {{ recipe.name }}">

                    <div class="card_info">
                        <span class="card_info_title">{{ recipe.title }}</span>
                        <span class="card_info_subtitle">por {{ recipe.chef_name }}</span>
                        <span class="card_info_view">
                            <a href="/admin/recipes/{{ recipe.id }}">
                                Visualizar
                            </a>
                        </span>
                    </div>

                </div>

            {% endfor %}
                
        </section>

    {% endblock container %}