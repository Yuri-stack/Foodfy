{% extends "layouts/login.njk" %}

{% block container %}

    {% include "layouts/parts/messages.njk" %}

    <section class="login">
        <h1>Esqueceu a Senha?</h1>

        <form id="form forgot-password" method="POST" action="">
            <div class="item">
                <div>Email</div>
                <div>
                    <input 
                        type="email" 
                        name="email" 
                        placeholder="Digite seu email para recuperar sua senha" 
                        value="{{ user.email }}" 
                        onblur="Validate.apply(this, 'isEmail')"
                        required> 
                </div>
            </div>
        </form>

        <div class="footer-forgot">
            <button type="submit">Recuperar</button>
        </div>
    </section>

{% endblock container %}