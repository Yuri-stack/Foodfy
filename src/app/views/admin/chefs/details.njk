{% extends "layouts/admin.njk" %} 

    {% block head %}
        <title>Chef {{ chef.name }}</title>
    {% endblock %}

    {% block container %}

        <section class="intro">

            <div class="intro-text">
                <h1>Chef: {{ chef.name }}</h1>
            </div>

            <div class="intro-btn">
                <a href="{{ chef.id }}/edit">Editar Chef</a>
            </div>
            
        </section>

        <section>
    
            <img 
                class="author-img-rounded"
                src="{{ chef.avatar_url }}" alt="Imagem de {{ chef.name }}">

            <div class="author-info">
                <span class="author-info-title">{{ chef.name }}</span>
                <span class="author-info-subtitle">{{ chef.total_recipes }} receita(s)</span>
            </div>

        </section>

        <section>

            <div class="intro-text"> 
                <h1>Receitas</h1>
            </div>

        </section>

        <section class="recipes_container">

            {% for recipeItem in recipes %}

                <div class="card_secondary">

                    <img class="card_img"
                        src="{{ recipeItem.image }}" alt="{{ recipeItem.title }}">

                    <div class="card_info">
                        <span class="card_info_title">{{ recipeItem.title }}</span>
                        <span class="card_info_subtitle">Por {{ chef.name }}</span>
                        <span class="card_info_view">
                            <a href="/admin/recipes/{{ recipeItem.id }}">
                                Visualizar
                            </a>
                        </span>
                    </div>

                </div>
            
            {% endfor %}

        </section>

    </section>  

    {% endblock %}

</html>