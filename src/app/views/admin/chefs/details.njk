{% extends "layouts/admin.njk" %} 

    {% block head %}
        <title>Chef {{ chef.name }}</title>
    {% endblock %}

    {% block container %}

        <section class="intro">

            <div class="intro-text">
                <h1>Chef: {{ chef.name }}</h1>
            </div>

            <div class="intro-btn">
                <a href="{{ chef.id }}/edit">Editar Chef</a>
            </div>
            
        </section>

        <section>
    
            <img 
                class="author-img-rounded"
                src="{{ chef.avatar_url }}" alt="Imagem de {{ chef.name }}">

            <div class="author-info">
                <span class="author-info-title">{{ chef.name }}</span>
                <span class="author-info-subtitle">{{ chef.total_recipes }} receita(s)</span>
            </div>

        </section>

        <section>

            <div class="intro-text"> 
                <h1>Receitas</h1>
            </div>

        </section>

        <section class="recipes_container">

            <div class="card_secondary">

                <img class="card_img"
                    src="{{ recipe.image }}" alt="{{ recipe.title }}">

                <div class="card_info">
                    <span class="card_info_title">{{ recipe.title }}</span>
                    <span class="card_info_subtitle">{{ recipe.chef_name }}</span>
                    <span class="card_info_view">
                        <a href="/admin/recipes/{{ recipe.id }}">
                            Visualizar
                        </a>
                    </span>
                </div>

            </div>

            <div class="card_secondary">

                <img class="card_img"
                    src="https://conteudo.imguol.com.br/c/entretenimento/fa/2015/09/11/paola-carosella-1442002659696_615x300.jpg" alt="">

                <div class="card_info">
                    <span class="card_info_title">Nome da Receita</span>
                    <span class="card_info_subtitle">Nome do Autor</span>
                    <span class="card_info_view">
                        <a href="/admin/recipes/{{ recipe.id }}">
                            Visualizar
                        </a>
                    </span>
                </div>

            </div>

            <div class="card_secondary">

                <img class="card_img"
                    src="https://conteudo.imguol.com.br/c/entretenimento/fa/2015/09/11/paola-carosella-1442002659696_615x300.jpg" alt="">

                <div class="card_info">
                    <span class="card_info_title">Nome da Receita</span>
                    <span class="card_info_subtitle">Nome do Autor</span>
                    <span class="card_info_view">
                        <a href="/admin/recipes/{{ recipe.id }}">
                            Visualizar
                        </a>
                    </span>
                </div>

            </div>

        </section>

    </section>  

    {% endblock %}

</html>