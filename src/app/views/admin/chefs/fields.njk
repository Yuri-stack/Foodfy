<div class="item">
    <h3>Nome do Chef</h3>
    <input type="text" name="name" placeholder="Insira o nome do chef" value="{{ chef.name }}" required></div>
</div>

<div class="item">
    <h3>Avatar</h3>

    <div id="avatar-upload">
        <input id="photo-avatar" type="file" name="photos" value="{{ chef.file.src }}" accept="image/*" onchange="ChefPhotoUpload.handleFileInput(event)">
        <p class="button">Enviar Avatar</p>
    </div>

    <div class="photo-preview">
        {% if chef.file %}
            <div class="photo" id="{{ chef.file.id }}">
                <img src="{{ chef.file.src }}" alt="{{ chef.file.name }}">
                <i class="material-icons" onclick="ChefPhotoUpload.removeOldPhoto(event)">close</i>
            </div>
            
            <input type="hidden" name="removed_file">

        {% endif %}
    </div>
</div>

        

        