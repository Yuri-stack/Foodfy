{% extends "layouts/admin.njk" %}

    {% block head %}
        <title>Foodfy - Chefs</title> 
    {% endblock %}

    {% block container %}

        <section class="intro">

            <div class="intro-text">
                <h1>Gerenciar Chefs</h1>
            </div>

            <div class="intro-btn">
                <a href="/admin/chefs/create">Criar Novo Chef</a>
            </div>

        </section>

        <section class="chefs_container">

            {% for chef in chefs %}

                <div class="card_secondary" id="{{ chef.id }}">

                    <img class="card_img_rounded" 
                        src="{{ chef.avatar_url }}" 
                    >

                    <div class="card_info">
                        <span class="card_info_title">{{ chef.name }}</span>
                        <span class="card_info_view"> 
                            <a href="/admin/chefs/{{ chef.id }}">
                                Visualizar
                            </a>
                        </span>
                    </div>

                </div>

            {% endfor %}

        </section>

    {% endblock %}
