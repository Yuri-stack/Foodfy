{% extends "layouts/admin.njk" %}

    {% block head %}
        <title>Usuários</title> 
    {% endblock %}

    {% block content %} 
        <section class="control">
            <h1>Gerenciar Usuários</h1>
            <a class="button" href="/admin/users/register">Criar Novo Usuário</a>
        </section>

        <section class="show-wrapper-user container">

            {% for user in users %}

                <div class="card list">
                    <span class="card_title">{{ user.name }}</span>
                    <span class="card_email">{{ user.email }}</span>
                    <span class="card_view">
                        <a class="btn_editar" href="/admin/users/{{ user.id }}/edit">Editar</a>
                        <a class="btn_deletar" href="/admin/users/{{ user.id }}/edit">Remover</a>
                    </span>
                </div>

            {% endfor %}

        </section>
    {% endblock %}