{% extends "layouts/public.njk" %} 

        {% block head%}
            <title>Receitas</title>
        {% endblock %}

        {% block container %}

            <section class="recipes-container">

            {% for recipe in recipes %}
                
                <div class="recipes" id="{{ recipe.id }}">
                
                    <div class="page-recipes-img">
                        <img src="{{ recipe.image_url }}" alt="Imagem de {{ recipe.name }}">
                    </div>

                    <div class="recipes-name">
                        <p>{{ recipe.name }}</p>
                    </div>

                    <div class="recipes-author">
                        <p>{{ recipe.author }}</p>
                    </div>
                </div>

            {% endfor %}

            </section>

        </section>  

        {% endblock %}

</html>