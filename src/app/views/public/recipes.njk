{% extends "layouts/public.njk" %}  

    {% block head%}
        <title>Receitas</title>
    {% endblock %}

        {% block header %}

            <header>

                <div class="container">

                    <div class="header">
                        <a href="/"><img src="/assets/logo.png" alt="Logo Foodfy"></a>

                        <nav>
                            <a href="/about">Sobre</a>
                            <a href="/recipes">Receitas</a>
                            <a href="/chefs">Chefs</a>
                        </nav>
                    </div>

                    <div class="filter">
                        <form action="/recipes" method="GET">
                            <input type="text" name="filter" placeholder="Buscar uma receita">
                            <button type="submit">Buscar</button>
                        </form>
                    </div>

                </div>

            </header>

        {% endblock header %}

        {% block container %}

        <section class="recipes container">

            {% for recipe in recipes %}

                <div class="card vertical">
                    <a href="/recipes/{{ recipe.id }}">
                        <img class="img_vertical" src="{{ recipe.image }}" alt="Imagem de {{ recipe.title }}">
                    </a>
                    <div class="card">
                        <span class="card_title">{{ recipe.title }}</span>
                        <span class="card_subtitle">por {{ recipe.chef_name }}</span>
                    </div>
                </div>

            {% endfor %}

        </section>

        <section class="pagination" data-page={{pagination.page}} data-total={{pagination.total}}></section>
        
        {% endblock %}