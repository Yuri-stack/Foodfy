{% extends "layouts/layout.njk" %}

    {% block head %}
        <title>Receitas</title>
    {% endblock %}

    {% block content %}

        <section class="title">
            <h2>Buscando por "{{ filter }}"</h2>
        </section>

        <section class="show-wrapper container">

            {% for recipe in recipes %}

                <div class="card vertical">
                    <a href="/recipes/{{ recipe.id }}">
                        <img class="img_vertical" src="{{ recipe.image }}" alt="Imagem de {{ recipe.title }}">
                    </a>
                    <div class="card">
                        <span class="card_title">{{ recipe.title }}</span>
                        <span class="card_subtitle">por {{ recipe.chef_name }}</span>
                    </div>
                </div>

            {% endfor %}

        </section>

        <section class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}
            >
        </section>

    {% endblock content %}