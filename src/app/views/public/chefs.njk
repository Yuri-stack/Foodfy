{% extends "layouts/public.njk" %}

    {% block container %}

        <section class="chefs_container">

            {% for chef in chefs %}

                <div class="card_secondary">

                    <img class="card_img_rounded" 
                        src="{{ chef.avatar_url }}" 
                    >

                    <div class="card_info">
                        <span class="card_info_title">{{ chef.name }}</span>
                        <span class="card_info_subtitle">{{ chef.total_recipes }} receitas</span>
                        {# <span class="card_info_view">
                            <a href="/admin/chefs/{{ chef.id }}">
                                Visualizar
                            </a>
                        </span> #}
                    </div>

                </div>

            {% endfor %}

        </section>

    {% endblock %}